<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP3_JDS.Views.MostrarDatosSQLite"
             Title="MostrarDatosSQLite">
    


    <VerticalStackLayout>
        <Button x:Name="MostrarDatos"
    Text="Obtener Personajes"
    Clicked="MostrarDatos_Clicked"
    HorizontalOptions="Center"></Button>
        
        <CollectionView x:Name="peopleList" Grid.Row="4">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,2*">
                        <Label Grid.Column="1" Text="{Binding name}" TextColor="{StaticResource Primary}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>