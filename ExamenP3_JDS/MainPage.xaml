<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP3_JDS.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Button x:Name="ConsultaBTN"
            Text="ObtenerJuegos"
            Clicked="ConsultaBTN_Clicked"
            HorizontalOptions="Center"
        ></Button>

            <ActivityIndicator x:Name="Loading"
                       HeightRequest="30"
                       Color="Blue"
                       IsRunning="True"
                       IsVisible="False">
            </ActivityIndicator>

            <ListView x:Name="listPersonajes">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label 
                            Text="{Binding nameJDS}"
                            VerticalTextAlignment="Center"
                            Margin="10,0,0,0"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
